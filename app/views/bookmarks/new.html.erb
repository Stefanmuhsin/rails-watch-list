<h1>Bookmark a movie</h1>
<%= simple_form_for [@list, @bookmark] do |f|%>
<%= f.association :movie, input_html: { class: 'form-control' } %>
<%= f.input :comment, input_html: { class: 'form-control' } %>
<%= f.submit class: 'btn btn-primary mb-1' %>
<% end %>

<%= link_to 'back', list_path(@list), class: 'btn btn-primary' %>
